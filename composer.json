{
    "name": "opaweb/filament-flatpickr",
    "description": "The popular Datetime Picker as a Filament Field",
    "keywords": [
        "savannabits",
        "laravel",
        "filament-flatpickr"
    ],
    "homepage": "https://github.com/opaweb/filament-flatpickr",
    "license": "MIT",
    "authors": [
        {
            "name": "Sam Maosa",
            "email": "smaosa@savannabits.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^2.15",
        "illuminate/contracts": ">=8.0",
        "spatie/laravel-package-tools": "^1.9.2"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Savannabits\\Flatpickr\\": "src",
            "Savannabits\\Flatpickr\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Savannabits\\Flatpickr\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Savannabits\\Flatpickr\\FlatpickrServiceProvider"
            ],
            "aliases": {
                "Flatpickr": "Savannabits\\Flatpickr\\Facades\\Flatpickr"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
